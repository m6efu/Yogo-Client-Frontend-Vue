/**** modal ****/

.message__modal--bg
  position fixed
  width 100%
  height 100%
  left 0
  top 0
  background $white
  z-index 3
  animation (.7s fadein)

.message__modal--container
  position fixed
  width 100%
  height 100%
  left 0
  top 0
  display flex
  flex-direction column
  justify-content center
  align-items center
  z-index 3

  p
    margin 0

.message__modal--scroll
  @extend .message__modal--container
  justify-content flex-start
  overflow scroll
  align-items inherit

.check-animation
  stroke-dasharray 180
  stroke-dashoffset 0
  animation check .8s ease

.wrap--modal
  padding 0 20px

.modal-content,
.modal
  /*font-family "Gotham SSm A", "Gotham SSm B", sans-serif !important*/
  overflow-y scroll
  -webkit-overflow-scrolling touch
  padding 50px 30px
  max-width 900px

  h1
    margin-bottom 20px

  img.modal__image--standard
    height 200px
    width 100%
    object-fit cover

  img.modal__image--side
    width 100%

  .modal__teacher--info
    margin 10px 0

    img
      width 60px
      height 60px
      border-radius 50%
      object-fit cover
      margin-right 20px

.md-dialog.md-theme-default
  background $white

.md-dialog-actions
  padding 30px
  min-height auto
  button
    right 17px !important

/**** tablet and up ****/

// +for_breakpoint(tablet)


/**** narrow screen ****/

+for_breakpoint(semi-narrow)

  .message__modal--container
    display flex
    width 60%
    margin 0 auto
    position relative


/**** narrow mobile ****/

+for_breakpoint(narrow-mobile)

  .message__modal--container
    display flex
    width 100%
    margin 0 auto
    position relative
