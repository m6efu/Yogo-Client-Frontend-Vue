/**** global ****/

*
  box-sizing border-box

#app
  min-height 100vh
  padding-bottom 50px

body
  font-size 14px
  line-height 1.2
  background $white
  position inherit
  -webkit-text-size-adjust: 100%;
  -webkit-font-smoothing: antialiased;
  -webkit-tap-highlight-color: transparent;

a
  text-decoration none !important
  cursor pointer


h1,
h2
  margin 0

h1
  font-size 2em
  font-weight bold
  line-height 1.2

h2
  font-weight normal
  font-size $h2
  line-height 1.2

h3
  font-size $medium
  margin 0
  hyphens auto

ul,
li
  list-style-type none
  margin 0
  padding 0
  hyphens auto

p
  line-height 1.4
  hyphens auto

.bold
  font-weight bold

.small
  font-size $small

.text-black
  color #424242

.text-gray
  color #5a5959

.leading-normal
  line-height 1.5

