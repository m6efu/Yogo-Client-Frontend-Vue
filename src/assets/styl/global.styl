/**** tablet and up ****/

+for_breakpoint(tablet)

  .flex-tablet
    display flex

  .hidden-sm
    display block

  #app
    margin-bottom 0

  .padding__right--20
    padding 0 40px 0 0

  .flex__align-center-tablet
    display flex
    align-items center

  .flex--row-tablet
    flex-direction row

  .flex__row--desktop
    flex-direction row

  .width__50--desktop
    width 48%

  .width__100--mobile
    width auto

  .margin__none--tablet
    margin 0

  .col-md-4
    width 25%

  .mr-md-4
    margin-right 20px

  .mb-btn-align
    margin-bottom 14px

  h1
    font-size $h1

  .tablet--hide
    display none !important

  .flex__grid--thirds
    display flex
    flex-direction row
    justify-content space-between

  .flex__grid--two
    @extend .flex__grid--thirds

  .flex--2-3
    width 66%

  .flex--1-3
    width 32% !important

  .flex__1-3--margin
    width 31%

  .flex__1-2
    position relative
    width 48%

  .flex--row
    display flex
    flex-direction row
    align-items center

  .flex--row-reverse
    display flex
    flex-direction row-reverse

  .flex--row-standard
    display flex
    flex-direction row

  .space--between
    justify-content space-between

  .space--around
    justify-content space-around

  .list__space--between
    display flex
    justify-content space-between
    align-items center
    margin 0

  .align--top
    align-items flex-start

  .flex--start
    align-items flex-start

  .padding--none
    padding 0
    .md-field
      padding 0
      min-height 38px

  .with__item--right
    .wrapper.narrow-wrapper
      width 100%

  .item__side--card
    border 1px solid
    padding 40px 20px

  ul.item__side--card-ul

    li
      line-height 1.4
      display flex
      align-items center

      h3
        line-height 1.5

      span
        color $blueHeartcore

      button
        margin-right 5px !important

/**** tablet and up ****/

+for_breakpoint(tablet)

  .flex--3
    flex 3

  .flex--2
    flex 2

  .flex--1
    flex 1


/**** desktop and up ****/

+for_breakpoint(desktop)

  .with__item--container
    width 900px
    margin 0 auto

  .wrapper
    width 1000px
    margin 0 auto

    &.narrow-wrapper
      width 550px

  .hidden-md-down
    display block

  .fs-lg {
    justify-content: flex-start !important;
  }

/**** desktop big and up ****/

+for_breakpoint(desktop-big)

  .wrapper
    width 1200px

